const shopify_partner = "/assets/shopify-partner.png";
const logo_1 = "/assets/hero/_1.webp";
const logo_2 = "/assets/hero/_2_.webp";
const logo_3 = "/assets/hero/_3.webp";
const logo_4 = "/assets/hero/_4.webp";
const logo_5 = "/assets/hero/_5.webp";
const logo_bg = "/assets/hero/logo_bg.webp";

const { tag } = Astro.props;
---

<div class="main">
  <ComponentLayout>
    <section class="hero-section">
      <div class="hero-container lg:gap-28 gap-15">
        <!-- Left side - Content -->
        <div class="hero-content">
          <!-- <div class="hero-badge">
            <span class="badge-text">ðŸš€ Leading SaaS Solutions</span>
          </div> -->

          <h1
            class="hero-title xl:text-7xl lg:text-6xl md:text-5xl text-4xl font-hero"
          >
            Build Your Business <span class="xs:inline sm:block lg:inline"
              >with <span class="text-primary">Zepto</span>
              <span class="text-secondary_2">Apps</span></span
            >
          </h1>

          <p class="hero-description md:text-xl text-lg max-w-xl">
            Take your eCommerce store to new heights and accelerate your growth
            like never before with the power of our cutting-edge shopify apps
          </p>

          <div class="hero-buttons lg:gap-[2.5rem] gap-[1.5rem]">
            <img class="h-10 w-auto" src={shopify_partner} alt="shopify logo" />
            <a href="#products-showcase">
              <button class="learn-more">
                <span class="circle" aria-hidden="true">
                  <span class="icon arrow"></span>
                </span>
                <span class="button-text">Browse Apps</span>
              </button>
            </a>

            <!-- <a
              href="/contact"
              class="flex items-center justify-center ring-2 rounded-full px-8 py-2 font-bold tracking-wide hover:bg-secondary_2 hover:text-white active:scale-100 hover:scale-110 transition-all duration-300 ease-in-out"
            >
              <button class="">
                <span class="">Let's talk</span>
              </button>
            </a> -->
          </div>

          <!-- <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-number">100K+</span>
              <span class="stat-label">Installs</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">99.9%</span>
              <span class="stat-label">Uptime</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">24/7</span>
              <span class="stat-label">Support</span>
            </div>
          </div> -->
        </div>

        <!-- Right side - Animated Products -->
        {
          tag === "1" ? (
            <div class="mx-auto hidden lg:inline-flex">
              <RightSide />
            </div>
          ) : tag === "2" ? (
            <div class="_hero-visual xl:max-w-[430px] max-w-[390px] mx-auto relative lg:inline-flex">
              <img
                width={800}
                class="w-full object-contain z-10"
                src={logo_bg}
                alt="Hero Visual"
                loading="eager"
              />
              <div class="z-20">
                <div
                  target="_blank"
                  href="https://productpersonalizer.com/"
                  class="product-card card-1"
                >
                  <div class="card-icon xl:w-[70px] w-[60px]">
                    <img
                      width={200}
                      src="/assets/hero/t-bg.webp"
                      x-src={logo_2}
                      alt="zepto product personalizer"
                      loading="lazy"
                    />
                  </div>
                </div>
                <div
                  target="_blank"
                  href="https://zcustomizer.app/"
                  class="product-card card-2"
                >
                  <div class="card-icon xl:w-[75px] w-[65px]">
                    <img
                      width={200}
                      src="/assets/hero/t-bg.webp"
                      x-src={logo_1}
                      alt="zepto sign customizer"
                      loading="lazy"
                    />
                  </div>
                </div>
                <div
                  target="_blank"
                  href="https://apps.shopify.com/infinseo"
                  class="product-card card-3"
                >
                  <div class="card-icon xl:w-[55px] w-[45px]">
                    <img
                      width={200}
                      src="/assets/hero/t-bg.webp"
                      x-src={logo_3}
                      alt="zepto infinSEO"
                      loading="lazy"
                    />
                  </div>
                </div>
                <div
                  target="_blank"
                  href="https://apps.shopify.com/boostlycart-cart-drawer-upsell"
                  class="product-card card-4"
                >
                  <div class="card-icon xl:w-[75px] w-[65px]">
                    <img
                      width={200}
                      src="/assets/hero/t-bg.webp"
                      x-src={logo_4}
                      alt="bootsly"
                      loading="lazy"
                    />
                  </div>
                </div>
                <div
                  target="_blank"
                  href="https://popman.app/"
                  class="product-card card-5"
                >
                  <div class="card-icon xl:w-[70px] w-[60px]">
                    <img
                      width={200}
                      src="/assets/hero/t-bg.webp"
                      x-src={logo_5}
                      alt="zepto popman"
                      loading="lazy"
                    />
                  </div>
                </div>
              </div>
            </div>
          ) : null
        }
      </div>
    </section>
  </ComponentLayout>
</div>

<script>
  let loadCount = 0;
  const callback = () => {
    loadCount++;
    if (loadCount == 5) {
      document.querySelector("._hero-visual")?.classList.add("img-loaded");
    }
  };
  document.querySelectorAll("[x-src]").forEach(function (el) {
    const newSrc = el.getAttribute("x-src");
    if (newSrc) {
      const img = new Image();
      img.onload = () => {
        el.setAttribute("src", newSrc);
        callback();
      };
      img.src = newSrc;
    }
  });
</script>

<style>
  /* button style */
  .hero-buttons {
    display: flex;
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }
  [x-src] {
    visibility: hidden;
  }
  ._hero-visual.img-loaded [x-src] {
    visibility: visible;
  }
  button {
    position: relative;
    display: inline-block;
    cursor: pointer;
    outline: none;
    border: 0;
    vertical-align: middle;
    text-decoration: none;
    background: transparent;
    padding: 0;
    font-size: inherit;
    font-family: inherit;
  }
  button.learn-more {
    width: 12rem;
    height: auto;
  }
  button.learn-more .circle {
    transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
    position: relative;
    display: block;
    margin: 0;
    width: 3rem;
    height: 3rem;
    background: #282936;
    border-radius: 1.625rem;
  }
  button.learn-more .circle .icon {
    transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    background: #fff;
  }
  button.learn-more .circle .icon.arrow {
    position: absolute;
    transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
    top: -0.1rem;
    left: 0.625rem;
    width: 1.125rem;
    height: 0.15rem;
    background: none;
  }
  button.learn-more .circle .icon.arrow::before {
    position: absolute;
    content: "";
    top: -0.23rem !important;
    right: 0.0625rem;
    width: 0.625rem;
    height: 0.625rem;
    border-top: 0.125rem solid #fff;
    border-right: 0.125rem solid #fff;
    transform: rotate(45deg);
  }
  button.learn-more .button-text {
    transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0.75rem 0;
    margin: 0 0 0 1.85rem;
    color: #282936;
    font-weight: 700;
    text-align: center;
  }
  button:hover .circle {
    width: 100%;
  }
  button:hover .circle .icon.arrow {
    background: #fff;
    transform: translate(1rem, 0);
  }
  button:hover .button-text {
    color: #fff;
  }

  /* others */
  .hero-section {
    /* min-height: calc(100vh - 58px - 1rem); */
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  /* .hero-section::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      animation: backgroundMove 20s ease-in-out infinite;
    } */

  @keyframes backgroundMove {
    0%,
    100% {
      transform: translateX(0) translateY(0);
    }
    25% {
      transform: translateX(-10px) translateY(-10px);
    }
    50% {
      transform: translateX(10px) translateY(-5px);
    }
    75% {
      transform: translateX(-5px) translateY(10px);
    }
  }

  .hero-container {
    /* max-width: 1200px; */
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    min-height: calc(100vh - 58px - 1rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: black;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    padding: 0.5rem 1rem;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
    animation: fadeInUp 0.8s ease-out;
  }

  .badge-text {
    font-size: 0.9rem;
    font-weight: 500;
  }

  .hero-title {
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .gradient-text {
    background: linear-gradient(45deg, #00f5ff, #ff00ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 3s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      filter: hue-rotate(0deg);
    }
    50% {
      filter: hue-rotate(45deg);
    }
  }

  .hero-description {
    line-height: 1.6;
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  .btn-primary,
  .btn-secondary {
    padding: 1rem 2rem;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background: linear-gradient(45deg, #00f5ff, #ff00ff);
    color: white;
    box-shadow: 0 4px 15px rgba(0, 245, 255, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 245, 255, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .hero-stats {
    display: flex;
    gap: 2rem;
    animation: fadeInUp 0.8s ease-out 0.8s both;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: bold;
    /* color: var(--color-accent); */
  }

  .stat-label {
    font-size: 1rem;
    opacity: 0.8;
  }

  .hero-visual {
    background-image: url("../../assets/hero/logo_bg.webp");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    position: relative;
    width: 100%;
    height: 500px;
  }

  .products-showcase {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .product-card {
    position: absolute;
  }
  .card-1 {
    left: 42%;
    top: -30px;
    animation: floatCard1 6s ease-in-out infinite;
  }
  .card-2 {
    top: 19%;
    left: 2%;
    animation: floatCard2 6s ease-in-out infinite;
  }
  .card-3 {
    top: 20%;
    right: 2%;
    animation: floatCard3 8s ease-in-out infinite;
  }
  .card-4 {
    bottom: 8%;
    left: 10%;
    animation: floatCard4 7s ease-in-out infinite;
  }
  .card-5 {
    bottom: 12%;
    right: 40px;
    animation: floatCard5 5s ease-in-out infinite;
  }

  .card-icon {
    height: auto;
  }

  @keyframes floatCard2 {
    0%,
    100% {
      transform: translateY(0) rotate(-18deg);
    }
    50% {
      transform: translateY(-8px) rotate(-20deg);
    }
  }

  @keyframes floatCard3 {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(-2deg);
    }
  }

  @keyframes floatCard4 {
    0%,
    100% {
      transform: translateY(0) rotate(-16deg);
    }
    50% {
      transform: translateY(-6px) rotate(-18deg);
    }
  }

  @keyframes floatCard5 {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-12px) rotate(-3deg);
    }
  }

  @keyframes floatCard1 {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-14px) rotate(3deg);
    }
  }

  @keyframes flowRight {
    0%,
    100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
      transform: translateX(5px);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  /* Responsive Design */
  @media (max-width: 1023px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      min-height: 0px;
      padding-top: 3rem;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-stats {
      justify-content: center;
    }
  }

  @media (max-width: 425px) {
    .stat-number {
      font-size: 1.5rem;
    }

    .stat-label {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 370px) {
    .card-1 {
      top: -15px;
    }
    .card-5 {
      right: 15px;
    }
    .card-1 .card-icon {
      width: 45px;
    }
    .card-2 .card-icon {
      width: 50px;
    }
    .card-3 .card-icon {
      width: 35px;
    }
    .card-4 .card-icon {
      width: 50px;
    }
    .card-5 .card-icon {
      width: 45px;
    }
  }
  @media screen and (max-width: 1440px) and (min-width: 1024px) {
    .hero-container {
      gap: 10px;
    }
  }
</style>
