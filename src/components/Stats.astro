---
import { Image } from "astro:assets";
import diamond from "../assets/diamond.png";
// import rocket from "../assets/rocket.png";
import rating from "../assets/rating.png";
import happyClient from "../assets/happy_client.png";

const stats = [
  {
    count: "100K+",
    label: "Happy Clients",
    // gradient: "from-rose-500 to-pink-600",
    gradient: "from-primary to-primary_2",
    icon: happyClient,
  },
  {
    count: "800+",
    label: "Five Star Reviews",
    // gradient: "from-amber-500 to-orange-600",
    gradient: "from-secondary to-secondary_2",
    icon: rating,
  },
  {
    count: "$2.9B+",
    label: "Revenue Generated",
    // gradient: "from-violet-500 to-purple-600",
    gradient: "from-primary_2 to-secondary_2",
    icon: diamond,
  },
];

import ComponentLayout from "../layouts/ComponentLayout.astro";
---

<section
  class="stats-section py-28 mx-auto !mt-22"
  aria-label="Statistics Section"
>
  <ComponentLayout class="">
    <h1 class="text-center mb-4 lg:text-6xl sm:text-5xl text-4xl font-bold">
      Our Impact in Numbers
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 pt-5">
      {
        stats.map(({ count, label, gradient, icon }) => (
          <div class="shadow-box h-[280px] md:min-h-[360px]">
            <Image class="icon w-15 h-15 mb-5" src={icon} alt={label} />
            <span
              class="stat-count md:text-8xl text-6xl font-bold relative z-10"
              data-count={count}
            >
              {count}
            </span>
            <span class="mt-4 md:text-2xl text-xl font-medium text-center relative z-10">
              {label}
            </span>
          </div>
        ))
      }
    </div>
  </ComponentLayout>
</section>

