---
const {
  title = "Zepto Apps | Shopify Apps | Themes | Custom Ecommerce",
  description = "Zepto Apps is a Web Application Development Company Building Shopify Apps, Themes &amp; Custom E-commerce. Over the last 7 years, we have successfully served 68k customers with our premium products and services. Our SaaS application, Zepto Product Personalizer, is empowering 16,000 E-commerce businesses across the globe.",
  url = "https://zeptoapps.com/",
  image = "/assets/og_image.webp", // Open Graph image (1200x630 recommended)
  type = "website", // Can be "article" if it's a blog post
  locale = "en_US",
  siteName = "ZeptoApps.com",
  twitterUsername = null,
  jsCDNs = [],
  cssCDNs = [],
} = Astro.props;
---

<head>
  <style is:inline>
    #preloader {
      position: fixed;
      inset: 0;
      width: 100vw;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f2f4f5;
      z-index: 9999;
      opacity: 1;
      transition: opacity 0.3s ease;
    }

    /* GIF sizing */
    #gifLoader {
      /* width: 90px;
      height: 90px; */
      display: block;
      animation: slowShow 0.55s linear;
    }

    /* Fade out smoothly on first load */
    #preloader.hidden {
      opacity: 0;
      pointer-events: none;
    }

    @keyframes slowShow {
      0% {
        visibility: hidden;
      }
      99% {
        visibility: hidden;
      }
      100% {
        visibility: visible;
      }
    }

    @keyframes ldio-k8kpenxtq7p {
      0% {
        transform: rotate(0);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    .ldio-k8kpenxtq7p div {
      box-sizing: border-box !important;
    }

    .ldio-k8kpenxtq7p > div {
      position: absolute;
      width: 124.62px;
      height: 124.62px;
      top: 30.69px;
      left: 30.69px;
      border-radius: 50%;
      border: 9.3px solid #000;
      border-color: #0670bb transparent #0670bb transparent;
      animation: ldio-k8kpenxtq7p 0.5681818181818182s linear infinite;
    }

    .ldio-k8kpenxtq7p > div:nth-child(2),
    .ldio-k8kpenxtq7p > div:nth-child(4) {
      width: 102.30000000000001px;
      height: 102.30000000000001px;
      top: 41.85px;
      left: 41.85px;
      animation: ldio-k8kpenxtq7p 0.5681818181818182s linear infinite reverse;
    }

    .ldio-k8kpenxtq7p > div:nth-child(2) {
      border-color: transparent #f69727 transparent #f69727;
    }

    .ldio-k8kpenxtq7p > div:nth-child(3) {
      border-color: transparent;
    }

    .ldio-k8kpenxtq7p > div:nth-child(3) div {
      position: absolute;
      width: 100%;
      height: 100%;
      transform: rotate(45deg);
    }

    .ldio-k8kpenxtq7p > div:nth-child(3) div:before,
    .ldio-k8kpenxtq7p > div:nth-child(3) div:after {
      content: "";
      display: block;
      position: absolute;
      width: 9.3px;
      height: 9.3px;
      top: -9.3px;
      left: 48.36px;
      background: #0670bb;
      border-radius: 50%;
      box-shadow: 0 115.32000000000001px 0 0 #0670bb;
    }

    .ldio-k8kpenxtq7p > div:nth-child(3) div:after {
      left: -9.3px;
      top: 48.36px;
      box-shadow: 115.32000000000001px 0 0 0 #0670bb;
    }

    .ldio-k8kpenxtq7p > div:nth-child(4) {
      border-color: transparent;
    }

    .ldio-k8kpenxtq7p > div:nth-child(4) div {
      position: absolute;
      width: 100%;
      height: 100%;
      transform: rotate(45deg);
    }

    .ldio-k8kpenxtq7p > div:nth-child(4) div:before,
    .ldio-k8kpenxtq7p > div:nth-child(4) div:after {
      content: "";
      display: block;
      position: absolute;
      width: 9.3px;
      height: 9.3px;
      top: -9.3px;
      left: 37.2px;
      background: #f69727;
      border-radius: 50%;
      box-shadow: 0 93px 0 0 #f69727;
    }

    .ldio-k8kpenxtq7p > div:nth-child(4) div:after {
      left: -9.3px;
      top: 37.2px;
      box-shadow: 93px 0 0 0 #f69727;
    }

    .loadingio-spinner-double-ring-n82zc9i61wh {
      width: 186px;
      height: 186px;
      display: inline-block;
      overflow: hidden;
      background: none;
    }

    .ldio-k8kpenxtq7p {
      width: 100%;
      height: 100%;
      position: relative;
      transform: translateZ(0) scale(1);
      backface-visibility: hidden;
      transform-origin: 0 0;
      /* see note above */
    }

    .ldio-k8kpenxtq7p div {
      box-sizing: content-box;
    }
  </style>
  <script>
    window.addEventListener("load", () => {
      const preloader = document.getElementById("preloader");
      setTimeout(() => {
        preloader?.classList.add("hidden");
      }, 750);
    });
  </script>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />

  <!-- Canonical -->
  <link rel="canonical" href={url} />

  <!-- Open Graph (Facebook, LinkedIn, etc.) -->
  <meta property="og:type" content={type} />
  <meta property="og:site_name" content={siteName} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={url} />
  <meta property="og:image" content={image} />
  <meta property="og:locale" content={locale} />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />
  {twitterUsername && <meta name="twitter:site" content={twitterUsername} />}

  <!-- Favicons -->
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />
  <!-- <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" /> -->
  <meta name="theme-color" content="#ffffff" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Parkinsans:wght@300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet"
  />

  <!-- CDNs -->
  {
    cssCDNs.map((href) => (
      <link rel="stylesheet" href={href} crossorigin="anonymous" />
    ))
  }
  {
    jsCDNs.map((src) => (
      <script type="text/javascript" src={src} defer crossorigin="anonymous" />
    ))
  }

  <!-- Optional: preload hero image or fonts for performance -->
  <!-- <link rel="preload" as="image" href="/hero.jpg" /> -->
</head>
